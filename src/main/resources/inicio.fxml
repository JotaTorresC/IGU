<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="525.0" prefWidth="436.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.notas.controladores.InicioControlador">

    <Label layoutX="27.0" layoutY="35.0" text="Titulo:" />
    <TextField fx:id="txtTitulo" layoutX="100.0" layoutY="30.0" minWidth="270.0" text="jaso" />


    <Label layoutX="27.0" layoutY="85.0" text="Categoria:" />
    <TextField fx:id="txtCategoria" layoutX="100.0" layoutY="80.0" minWidth="270.0" text="jason" />


    <Label layoutX="27.0" layoutY="135.0" text="Nota:" />
    <TextArea fx:id="txtNota" layoutX="100.0" layoutY="130.0" prefHeight="100.0" prefWidth="270.0" text="jason" />


    <Button fx:id="btnNuevaNota" layoutX="165.0" layoutY="270.0" onAction="#crearNota" text="Crear nueva nota" />

    <TableView fx:id="tablaNotas" layoutY="340.0" prefHeight="200.0" prefWidth="437.0">
        <columns>
            <TableColumn fx:id="colTitulo" text="Título" />
            <TableColumn fx:id="colCategoria" text="Categoría" />
            <TableColumn fx:id="colTexto" text="Nota" />
            <TableColumn fx:id="colFecha" text="Fecha creación" />
        </columns>
    </TableView>

</AnchorPane>
